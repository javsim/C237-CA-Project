<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>CheapSGCarRental</title>
    <style>
      body{
        background-color:grey;
      }
      .carousel-item img{
        height: 550px;
      }
      .btn:hover, .btn.active{
        color: orange;
      }
      a:hover, a:active{
        color: orange !important;
      }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <!-- carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="https://sixcherriesontop.com/wp-content/uploads/2020/03/How-to-select-a-car-to-rent.png" class="d-block w-100" alt="cars">
              <div class="carousel-caption">
                  <h2>Rent a Car in Singapore</h2>
                  <h3><b><span style="color:yellow">Free</span> Island Wide Delivery</b></h3>
              </div>
          </div>
          <div class="carousel-item">
              <img src="http://4.bp.blogspot.com/-CHhzI8TuTDg/VnfeYdzxI-I/AAAAAAAAABY/bjAtvB0bexk/s1600/car%2Brentals%2Bislamabad.png" class="d-block w-100" alt="cars">
              <div class="carousel-caption">
                  <h2><span style="color:yellow">Lowest</span> Price in Singapore</h2>
              </div>
          </div>
          <div class="carousel-item">
              <img src="https://falconrentcar.com/wp-content/uploads/2021/09/Rent-a-car-Islmabad.png" class="d-block w-100" alt="cars">
              <div class="carousel-caption">
                  <h2>Choose from our <span style="color:yellow">Wide</span> Range of Fleet</h2>
              </div>
          </div>
      </div>
      <!-- Left and right controls/icons -->
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
      </button>
  </div>

      <div class="container py-5">
        <div class="row">
      
          <!-- Card 1 -->
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <img src="https://images.prismic.io/auto-site/19ebe26a51ee56275da42545cf4ccdc8d66b305d_sedan.jpg?auto=compress,format" class="card-img-top" alt="sedan">
              <div class="card-body">
                <h5 class="card-title">Sedan</h5>
                <p class="price">from <b>$60</b> / day</p>
                <hr>
                <% for(let i=0; i < cars.length; i++) { %>
                  <% if(cars[i].category == "sedan") {%>
                  <a href="/car/<%= cars[i].carId %>"><%= cars[i].brand %> <%= cars[i].model %></a><p></p>
                  <% } %>
               <% } %>
              </div>
              <div class="card-footer">
                <a href="/sedan" class="btn btn-primary">View More</a>
              </div>
            </div>
          </div>
      
          <!-- Card 2 -->
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <img src="https://media.whatcar.com/migration/reviews/fc6b4a65546ece848d265f25b3a2c164b4f9a024.jpg" class="card-img-top" alt="Stationwagon">
              <div class="card-body">
                <h5 class="card-title">SUV</h5>
                <p class="price">from <b>$100</b> / day</p>
                <hr>
                <% for(let i=0; i < cars.length; i++) { %>
                  <% if(cars[i].category == "suv") {%>
                    <a href="/car/<%= cars[i].carId %>"><%= cars[i].brand %> <%= cars[i].model %></a><p></p>
                  <% } %>
               <% } %>
              </div>
              <div class="card-footer">
                <a href="/suv" class="btn btn-primary">View More</a>
              </div>
            </div>
          </div>
      
          <!-- Card 3 -->
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <img src="https://s3.amazonaws.com/www.autowise.com/wp-content/uploads/2021/06/08021553/2021-Lexus-LS500-scaled.jpg" class="card-img-top" alt="Full Size / SUV">
              <div class="card-body">
                <h5 class="card-title">Luxury Sedan</h5>
                <p class="price">from <b>$120</b> / day</p>
                <hr>
                <% for(let i=0; i < cars.length; i++) { %>
                  <% if(cars[i].category == "luxury") {%>
                    <a href="/car/<%= cars[i].carId %>"><%= cars[i].brand %> <%= cars[i].model %></a><p></p>
                  <% } %>
               <% } %>
              </div>
              <div class="card-footer">
                <a href="/luxury" class="btn btn-primary">View More</a>
              </div>
            </div>
          </div>
      
          <!-- Card 4 -->
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <img src="https://s3.paultan.org/image/2019/05/Toyota-Granvia-1.jpg" class="card-img-top" alt="Minivan / MPV">
              <div class="card-body">
                <h5 class="card-title">Minivan / MPV</h5>
                <p class="price">from <b>$140</b> / day </p>
                <hr>
                <% for(let i=0; i < cars.length; i++) { %>
                  <% if(cars[i].category == "mpv") {%>
                    <a href="/car/<%= cars[i].carId %>"><%= cars[i].brand %> <%= cars[i].model %></a><p></p>
                  <% } %>
               <% } %>
              </div>
              <div class="card-footer">
                <a href="/mpv" class="btn btn-primary">View More</a>
              </div>
            </div>
          </div>
      
        </div>
      </div>

 </body>
</html>