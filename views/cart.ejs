<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>CheapSGCarRental</title>
    <style>
        body{
        background-color:grey;
        padding-top:90px;
      }
      .btn:hover, .btn.active{
        color: orange;
      }
      .paypal-button-container{
        margin-left:250px
      }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    
        <div class="container mt-3">
            <h2>Cart</h2>

            <form id="bookingForm" action="/cart" method="POST" >
                <div class="mb-3 mt-3">
                    <label for="car">Car Model:</label><br>
                    <input type="text" class="form-control" id="car" name="car" value="<%= car.brand %> <%=car.model %>" required>
                </div>

                <img src="<%= car.image %>" width="20%">
                
                <div class="mb-3 mt-3">
                    <label for="name">Name:</label><br>
                    <input type="text" id="name" class="form-control" name="name" placeholder="Enter your name" required>
                </div>
                
                <div class="mb-3 mt-3">
                    <label for="license">License:</label><br>
                    <input type="text" class="form-control" id="license" name="license" placeholder="Enter your license" required>
                </div>

                <div class="mb-3 mt-3">
                    <label for="dob">DOB:</label><br>
                    <input type="date" class="form-control" id="dob" name="dob" placeholder="Enter your DOB" required>
                </div>

                <div class="mb-3 mt-3">
                    <label for="contact">Contact:</label><br>
                    <input type="number" class="form-control" id="contact" name="contact" placeholder="Enter your contact number" required>
                </div>

                <div class="mb-3 mt-3">
                    <label for="location">Drop-off location:</label><br>
                    <input type="text" class="form-control" id="location" name="location" placeholder="Enter your location" required>
                </div>

                <div class="mb-3 mt-3">
                    <label for="postal">Postal code:</label><br>
                    <input type="number" class="form-control" id="postal" name="postal" placeholder="Enter your postal code" required>
                </div>

                <div class="mb-3 mt-3">
                    <label for="startdate">Start date:</label><br>
                    <input type="date" class="form-control" id="startdate" name="startdate" required>
                </div>

                <div class="mb-3 mt-3">
                    <label for="enddate">End date:</label><br>
                    <input type="date" class="form-control" id="enddate" name="enddate" required>
                </div>

                <button type="submit" class="btn btn-primary">Confirm Details</button>
            
                </form>

        </div>

        <br>
        <br>
        <div class="paypal-button-container">
        <div id="paypal-button-container"></div>
        </div>
        <script src="https://www.paypal.com/sdk/js?client-id=AW5ITW1wHf_QehKNXBAQlQHfij6G-xcegBMAfmYwplNC66TY83RNFgHcsS2jm1iQ-Un_vUbKOXgYH-V5&currency=USD" data-sdk-integration-source="button-factory"></script>
        <script>
        paypal.Buttons({
            style: {
                shape: 'rect',
                color: 'gold',
                layout: 'vertical',
                label: '',
                
            },
            createOrder: function(data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: '1'
                        }
                    }]
                });
            },
            onApprove: function(data, actions) {
                    return actions.order.capture().then(function(details) {
                        // Collect booking details from the form
                        const form = document.getElementById('bookingForm');
                        const formData = new FormData(form);
                        const bookingData = {};
                        formData.forEach((value, key) => {
                            bookingData[key] = value;
                        });

                        // Send booking details to the server
                        fetch('/cart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(bookingData)
                        }).then(response => {
                            if (response.ok) {
                                alert('Transaction completed by ' + details.payer.name.given_name + '!');
                                window.location.href = '/booking';
                            } else {
                                alert('Transaction completed but there was an error with your booking.');
                            }
                        }).catch(error => {
                            console.error('Error completing booking:', error);
                            alert('Transaction completed but there was an error with your booking.');
                        });
                    });
                }
        }).render('#paypal-button-container');
        </script>
</body>
</html>