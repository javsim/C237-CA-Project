<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>CheapSGCarRental</title>
    <style>
        body{
        background-color:grey;
      }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <!-- display booking details -->
    <div class="container">
        <br>
        <div class="text-center"><h2>Car Bookings</h2></div>
        <br>

        <table class="table table-hover small text-center">
          <thead>
              <tr>
                <th width="100">Name</th>
                <th width="100">License</th>
                <th width="100">Car Model</th>
                <th width="50">DOB</th>
                <th width="50">Contact</th>
                <th width="100">Location</th>
                <th width="50">Postal Code</th>
                <th width="50">Start Date</th>
                <th width="50">End Date</th>
                <th width="50">Edit</th>
                <th width="50">Delete</th>
              </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < customers.length; i++) { %>
              <tr>
                <td><%= customers[i].name %></td>
                <td><%= customers[i].license %></td>
                <td><%= customers[i].car %></a></td>
                <td><%= new Date(customers[i].dob).toLocaleDateString('en-GB') %></td>
                <td><%= customers[i].contact %></td>
                <td><%= customers[i].location %></td>
                <td><%= customers[i].postal %></td>
                <td><%= new Date(customers[i].startdate).toLocaleDateString('en-GB') %></td>
                <td><%= new Date(customers[i].enddate).toLocaleDateString('en-GB') %></td>
                <td><a href="/editBooking/<%= customers[i].customerId %>" class="btn btn-success">Edit</a></td>
                <td><a href="/deleteBooking/<%= customers[i].customerId %>" class="btn btn-danger"
                  onclick="return confirm('Are you sure you want to delete this booking?')">Delete</a></td>
              </tr>
            <% } %>
          </tbody>
        </table>

        
</body>
</html>