<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>CheapSGCarRental</title>
    <style>
        body{
        background-color:grey;
        padding-top:30px;
      }
      .btn:hover, .btn.active{
        color: orange;
      }
      img{
        border-radius:10px;
      }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <br>
    <br>
    <!-- card loop -->
    <div class="container py-5">
        <div class="row">
          <% for(let i=0; i < cars.length; i++) { %>
            <% if(cars[i].category == "sedan") { %>
              <div class="col-md-3 mb-4">
                <div class="card h-100">
                  <img src="<%= cars[i].image %>" alt="car image" width="250px" height="150px">
                  <div class="card-body">
                    <h4 class="card-title"><%= cars[i].brand %> <%= cars[i].model %></h4>
                    <hr>
                    <p><b>Engine Capacity(CC):</b> <%= cars[i].cc %></p>
                    <p><b>Transmission:</b> <%= cars[i].transmission %></p>
                    <p><b>Number of Seats:</b> <%= cars[i].seats%></p>
                    <p><b>Rental:$</b> <%= cars[i].rental %></p>
                  </div>
                  <div class="card-footer">
                    <a href="/cart/<%= cars[i].carId %>" class="btn btn-primary">Rent</a>
                  </div>
                </div>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>
      
</body>
</html>